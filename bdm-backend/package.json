{
  "name": "bdm-backend",
  "version": "1.0.0",
  "description": "Business Document Management System Backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:api": "cross-env NODE_ENV=test jest tests/api",
    "test:load": "artillery run tests/load/artillery-config.yml",
    "test:load-quick": "artillery quick --count 50 --num 200 http://localhost:5000/api/clauses",
    "test:all": "npm run test && npm run test:load"
  },
  "keywords": [
    "document-management",
    "ai",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jszip": "^3.10.1",
    "multer": "^2.0.2",
    "mysql2": "^3.6.5",
    "openai": "^4.20.1",
    "puppeteer": "^21.5.2",
    "uuid": "^13.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "artillery": "^2.0.27",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4"
  }
}
